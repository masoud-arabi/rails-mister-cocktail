<%= render "shared/header" %>
<div class="back-ground-image height-form">
    <div class="container" id="dose-form">
        <h2 class="text-center">Add Your Favorite Ingredient</h2>
        <div class="form justify-content-center">
            <%= simple_form_for [@cocktail, @dose] do |f| %>
            <%= f.association :ingredient, collection: Ingredient.all  %>
            <%= f.input :description %>
            <div class="d-flex justify-content-center">
                <%=  f.button :submit, "Submit", class: "btn btn-primary rounded"%>
            </div>
            <% end %>
        </div>
    </div>
</div>