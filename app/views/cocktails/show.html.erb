<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://www.maxim.com/.image/c_limit%2Ccs_srgb%2Cq_auto:good%2Cw_1400/MTUwODg5MTM1MDY0NzU0MDA5/cocktails-promo.webp');">
  <div class="container">
    <h1><%= @cocktail.name %> </h1>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
<ul>
<% @cocktail.doses.each do |dose| %>
<li> <%= dose.description%> <%= dose.ingredient.name%> <%= link_to "delete this dose", dose_path(dose), method: :delete %></li>
<% end %>
</ul>
<%= link_to "Add new doses", new_cocktail_dose_path(@cocktail) %>
</div>
