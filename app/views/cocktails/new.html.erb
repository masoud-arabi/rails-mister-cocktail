<div class="container">
    <div class="form">
        <h2 class="text-center"> Add a New Cocktail </h2>
        <div class="from-inputs">
            <%= simple_form_for (@cocktail) do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :photo, as: :file %>
            <div class="d-flex justify-content-center">
                <%= f.button :submit , "Submit", class: "btn btn-primary"%>
            </div>
        </div>

        <% end %>
    </div>
</div>